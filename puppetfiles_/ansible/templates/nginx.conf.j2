user  nginx;
worker_processes  1;

error_log  /var/log/nginx/error.log warn;
pid        /var/run/nginx.pid;

events {
    worker_connections  1024;
}

http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main;

    sendfile        on;

    keepalive_timeout  65;

    client_max_body_size 500M;

    upstream puppetfiles {
        server {{hostvars['puppetfiles-api']['ansible_host']}}:{{ SERVICE_PORT }};
    }

    proxy_set_header Host $host;

    server {
        listen 80;

        server_name {{ SERVICE_FQDN }};

        return 301 https://$host$request_uri;
    }

    server {
        listen 443 default_server ssl;

        server_name {{SERVICE_FQDN}};

        keepalive_timeout   70;

        ssl_protocols TLSv1.3 TLSv1.2;
        ssl_session_cache shared:SSL:1m;
        ssl_ciphers EECDH+ECDSA+AESGCM:EECDH+aRSA+AESGCM:EECDH+ECDSA+SHA512:EECDH+ECDSA+SHA384:EECDH+ECDSA+SHA256:ECDH+AESGCM:ECDH+AES256:DH+AESGCM:DH+AES256:RSA+AESGCM:!aNULL:!eNULL:!LOW:!RC4:!3DES:!MD5:!EXP:!PSK:!SRP:!DSS;
        ssl_prefer_server_ciphers   on;
        ssl_certificate /etc/ssl/certs/{{ SERVICE_FQDN }}/current/cert.pem;
        ssl_certificate_key /etc/ssl/certs/{{ SERVICE_FQDN }}/current/key.pem;

        location / {
            proxy_pass http://puppetfiles;
            proxy_set_header Host $host;
            proxy_set_header X-Forwarded-For $remote_addr;
            proxy_set_header X-Forwarded-Proto https;
        }
    }
}
